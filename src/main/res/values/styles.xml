<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:textColorPrimary">@color/text</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorForeground">@color/text</item>
        <item name="colorButtonNormal">@color/bgLight</item>
    </style>


    <!-- Table Header -->

    <style name="TableHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">courier new</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TableHeader.FrameCount" parent="TableHeader">
        <item name="android:background">@color/bgTableFrameCount</item>
        <item name="android:layout_weight">0.0382</item>
    </style>

    <style name="TableHeader.KDA" parent="TableHeader">
        <item name="android:background">@color/bgTableKDA</item>
        <item name="android:layout_weight">0.0470</item>
    </style>

    <style name="TableHeader.OKI" parent="TableHeader">
        <item name="android:background">@color/bgTableOKI</item>
        <item name="android:layout_weight">0.1118</item>
    </style>


    <!-- Table Body -->

    <style name="TableBody" parent="TableHeader">
        <item name="android:gravity">top|center_horizontal</item>
    </style>

    <style name="TableBody.FrameCount" parent="TableBody">
        <item name="android:background">@color/bgTableFrameCount</item>
        <!--<item name="android:layout_weight">0.0382</item>-->
    </style>

    <style name="TableBody.KDA" parent="TableBody">
        <item name="android:background">@color/bgTableKDA</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">0.0470</item>
    </style>

    <style name="TableBody.OKI" parent="TableBody">
        <item name="android:background">@color/bgTableOKI</item>
        <item name="android:layout_weight">0.1118</item>
    </style>


    <!-- KD Move Select -->

    <style name="KDMoveSelect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="KDMoveSelect.Bottom" parent="KDMoveSelect">
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Oki Move Select -->

    <style name="OkiMoveSelect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OkiMoveSelect.Upper" parent="OkiMoveSelect">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="OkiMoveSelect.Lower" parent="OkiMoveSelect">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Current Oki Setup Drawer -->

    <style name="CurrentOki">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="CurrentOki.Title" parent="CurrentOki">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="CurrentOki.Item" parent="CurrentOki">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="CurrentOki.Label" parent="CurrentOki.Item">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="CurrentOki.FrameKill" parent="CurrentOki">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CurrentOki.FrameKill.Title" parent="CurrentOki.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CurrentOki.FrameKill.Item" parent="CurrentOki.FrameKill">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <!---->

</resources>
